<UserControl
    x:Class="YoutubeDownloader.CaptionProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <ProgressBar Panel.ZIndex="1" Style="{DynamicResource ProgressBarStyle}" Value="{Binding CurrentProgress, Mode=OneWay}" />
        <TextBlock Panel.ZIndex="2" Style="{DynamicResource Mp3ListTextBlockStyle}">
            <Run Text="{Binding State}" />
            <Run Text="{Binding CurrentProgress, StringFormat={}{0:0}%}" />
        </TextBlock>
    </Grid>
</UserControl>
